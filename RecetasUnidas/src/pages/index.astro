			<section>
				<form action="/feed" method="POST">
					<div>
						<label for="nombreUsuario">Nombre de usuario:</label>
						<input type="text" name="nombreUsuario" id="nombreUsuario" />
					</div>
					<div>
						<label for="passwdUsuario">Contraseña:</label>
						<input type="password" name="passwdUsuario" id="passwdUsuario">
					</div>
					<div>
						<label for="verPasswd">Ver contraseña</label>
						<input type="checkbox" name="verPasswd" id="verPasswd" onchange="">
					</div>
					<div>
						<input type="submit" value="Iniciar Sesion">
					</div>
				</form>
			</section>
		</div>
	  </main>
  </div>
</Layout>

<script is:inline type="module">
	  const verPasswd = document.getElementById('verPasswd');
  const passwdUsuario = document.getElementById('passwdUsuario');

  verPasswd.addEventListener('change', () => {
	if (verPasswd.checked) {
	  passwdUsuario.type = 'text';
	} else {
	  passwdUsuario.type = 'password';
	}
  });
</script>

